@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


@using (Html.BeginForm(FormMethod.Post))
{
    <div class="container text-light pt-5">
        <div class="row">
            <div class="col-12 col-sm-6">
                <h1>Kayıt Ol</h1>
                <div class=" form-group">
                    @Html.Label(null, "Email")
                    @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control" })
                </div>
                <div class=" form-group">
                    @Html.Label(null, "Kullanıcı Adı")
                    @Html.TextBoxFor(x => x.UserName, null, new { @class = "form-control" })
                </div>
                <div class=" form-group">
                    @Html.Label(null, "Şifre")
                    @Html.TextBoxFor(x => x.Password, null, new { @class = " form-control", type = "password" })
                </div>

                <div class=" form-group">
                    @Html.Label(null, "Şifre Tekrarı")
                    @Html.TextBoxFor(x => x.ConfirmPassword, null, new { @class = " form-control", type = "password" })
                </div>

                <div class="form-group d-flex justify-content-end">
                    <input type="submit" value="Kaydol" class="btn btn-success" />
                </div>
            </div>
        </div>        
    </div>
}